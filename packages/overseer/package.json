{
  "name": "@energyweb/greenproof-overseer",
  "version": "1.1.6",
  "description": "",
  "author": "",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main | pino-sentry --level error",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:unit": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --passWithNoTests --config ./test/jest-e2e.json --forceExit",
    "deploy:local": "npx hardhat run --network localhost src/contracts/scripts/deploy.js",
    "run:testnet": "yarn build:contract && yarn concurrently \"yarn run:blockchain\" \"wait-on tcp:8545 && yarn deploy:local\""
  },
  "dependencies": {
    "@nestjs/common": "9.0.11",
    "@nestjs/core": "9.0.11",
    "@nestjs/event-emitter": "1.3.1",
    "@nestjs/platform-express": "9.0.11",
    "dotenv": "16.0.2",
    "ethers": "5.7.0",
    "nestjs-pino": "3.1.1",
    "pino-http": "8.2.0",
    "pino-sentry": "0.13.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6"
  },
  "devDependencies": {
    "@energyweb/greenproof-contracts": "1.0.4",
    "@leocode/eslint-config": "2.0.0",
    "@nestjs/cli": "9.1.2",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.0.11",
    "@nomiclabs/hardhat-ethers": "2.1.1",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@types/express": "4.17.13",
    "@types/jest": "29.2.0",
    "@types/node": "18.7.15",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "concurrently": "7.3.0",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "hardhat": "2.11.1",
    "jest": "29.0.2",
    "supertest": "6.2.4",
    "ts-jest": "29.0.3",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.2",
    "wait-on": "6.0.1"
  },
  "peerDependencies": {
    "@energyweb/greenproof-contracts": "1.x",
    "@nestjs/event-emitter": "1.3.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
